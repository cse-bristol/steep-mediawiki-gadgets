		"breadcrumbs.css": {
		    "media": "all"
		},

		"content.css": {
		    "media": "all"
		},
		"table-of-contents.css": {
		    "media": "all"
		},
		"oo-ui-elements.css": {
		    "media": "screen"
		},
		"lqt.css": {
		    "media": "screen"
		},
		"forms.css": {
		    "media": "screen"
		},
		"catlinks.css": {
		    "media": "screen"
		},

		"print.css": {
		    "media": "print"
		}
	    }
	},
	"skins.steep.js": {
	    "scripts": [
		"fullscreen-toggle.js"
	    ],
	    "position": "bottom",
	    "dependencies": [
		"mediawiki.cookie",
		"oojs-ui",
		"ext.steep-icons"
	    ]
	}
