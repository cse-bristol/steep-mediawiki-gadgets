    "license-name": "MIT",
    "type": "skin",
    "ConfigRegistry": {
    },
    "ValidSkinNames": {
	"steep": "Steep"
    },
    "MessagesDirs": {
	"Steep": [
	    "i18n"
	]
    },
    "AutoloadClasses": {
	"SkinSteep": "SkinSteep.php",
	"SteepTemplate": "SteepTemplate.php",
	"SteepNavbar": "SteepNavbar.php",
	"SteepContentActions": "SteepContentActions.php",
	"SpecialManageUsers": "SpecialManageUsers.php"
    },

    "SpecialPages": {
	"ManageUsers": "SpecialManageUsers"
    },

    "ResourceModules": {
	"skins.steep.styles": {
	    "position": "top",
	    "styles": {
		"fonts.css": {
		    "media": "all"
		},
		"screen.css": {
		    "media": "screen"
