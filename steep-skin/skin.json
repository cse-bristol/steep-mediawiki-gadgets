    "ResourceModules": {
	"skins.steep.styles": {
	    "position": "top",
	    "styles": {
		"fonts.css": {
		    "media": "all"
		},
		"screen.css": {
		    "media": "screen"
		},
		"navbar.css": {
		    "media": "screen"
		},
		"fullscreen-toggle.css": {
		    "media": "screen"
		},
		"user-tools.css": {
		    "media": "screen"
		},
		"content-actions.css": {
		    "media": "screen"
		},
		"content.css": {
		    "media": "all"
		},
		"table-of-contents.css": {
		    "media": "all"
		},
		"search-in-category.css": {
		    "media": "screen"
		},
		"category-table.css": {
		    "media": "screen"
		},
		"oo-ui-elements.css": {
		    "media": "screen"
		},
		"lqt.css": {
		    "media": "screen"
		},
		"forms.css": {
		    "media": "screen"
		},
		"catlinks.css": {
		    "media": "screen"
		},

		"print.css": {
		    "media": "print"
		}
	    }
	},
	"skins.steep.js": {
	    "scripts": [
		"steep.js",
		
		"steep-utils.js",
		
		"fullscreen-toggle.js",

