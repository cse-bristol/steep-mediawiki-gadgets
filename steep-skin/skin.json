			"user-tools.css": {
			    "media": "screen"
			},
			"content-actions.css": {
			    "media": "screen"
			},
			"content.css": {
			    "media": "screen"
			},
			"table-of-contents.css": {
			    "media": "screen"
			},
			"search-in-category.css": {
			    "media": "screen"
			},
			"category-table.css": {
			    "media": "screen"
			},
			"oo-ui-elements.css": {
			    "media": "screen"
			},
			"lqt.css": {
			    "media": "screen"
			},
			"forms.css": {
			    "media": "screen"
			}
	    }
	},
	"skins.steep.js": {
	    "scripts": [
		"steep-utils.js",
		
		"table-of-contents.js",

		"new-document-in-category.js",
		"new-project-dialogue.js",
		"add-asset-dialogue.js",
		"new-document-in-category-button.js",

		
		"search-in-category.js",
		"sort-category-table.js"
