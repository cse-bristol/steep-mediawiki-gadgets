		"add-to-category/add-asset-dialogue.js",
		"add-to-category/add-asset-to-project-dialogue.js",
		"add-to-category/add-asset-to-category-dialogue.js",
		"add-to-category/add-to-category-button.js",
		
		"search-in-category.js",
		"sort-category-table.js"
	    ],
	    "position": "bottom",
	    "dependencies": [
		"mediawiki.cookie",
		"mediawiki.api.category",
		"mediawiki.api.edit",
		"oojs-ui"
	    ]
	}
    },
    "ResourceFileModulePaths": {
	"localBasePath": "resources",
	"remoteSkinPath": "Steep/resources"
    },    
    "manifest_version": 1
