{
    "name": "Steep",
    "author": [
	"Glenn Searby"
    ],
    "url": "https://github.com/cse-bristol/steep-skin",
    "descriptionmsg": "steepskin-desc",
    "namemsg": "steepskin-name",
    "license-name": "MIT",
    "type": "skin",
    "ConfigRegistry": {
    },
    "ValidSkinNames": {
	"steep": "Steep"
    },
    "MessagesDirs": {
	"Steep": [
	    "i18n"
	]
    },
    "AutoloadClasses": {
	"SkinSteep": "SkinSteep.php",
	"SteepTemplate": "SteepTemplate.php",
	"SteepNavbar": "SteepNavbar.php",
	"SteepContentActions": "SteepContentActions.php",
	"CategoryContentSearch": "CategoryContentSearch.php",
	"CategoryTable": "CategoryTable.php"
    },

    "Hooks": {
	"CategoryPageView": "CategoryTable::drawCategoryAsTable"
    },

    "ResourceModules": {
	"skins.steep.styles": {
	    "position": "top",
	    "styles": {
		"screen.css": {
		    "media": "screen"
		},
		"navbar.css": {
		    "media": "screen"
		},
		"user-tools.css": {
		    "media": "screen"
		},
		"content-actions.css": {
		    "media": "screen"
		},
		"content.css": {
		    "media": "screen"
		},
		"table-of-contents.css": {
		    "media": "screen"
		},
		"search-in-category.css": {
		    "media": "screen"
		},
		"category-table.css": {
		    "media": "screen"
		}		
	    }
	},
	"skins.steep.js": {
	    "scripts": [
		"steep-utils.js",
		"table-of-contents.js",
		"new-document-in-category.js",
		"search-in-category.js",
		"sort-category-table.js"
	    ],
	    "position": "bottom",
	    "dependencies": [
		"mediawiki.cookie",
		"oojs-ui"
	    ]
	}
    },
    "ResourceFileModulePaths": {
	"localBasePath": "resources",
	"remoteSkinPath": "Steep/resources"
    },    
    "manifest_version": 1
}
